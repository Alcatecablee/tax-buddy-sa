  "shortcuts": [
    {
      "name": "Upload IRP5",
      "short_name": "Upload",
      "description": "Upload and process IRP5 document",
      "url": "/upload",
      "icons": [
        {
          "src": "/assets/upload-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Manual Calculator",
      "short_name": "Calculate",
      "description": "Manual tax calculation",
      "url": "/manual-entry",
      "icons": [
        {
          "src": "/assets/calculator-icon.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Tax Dashboard",
      "short_name": "Dashboard",
      "description": "View your tax dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/assets/dashboard-icon.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/upload",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["application/pdf", "image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+taxfy",
      "url": "/?handler=%s"
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "id": "/?source=pwa",
  "scope": "/",
  "start_url": "/?source=pwa",
  "orientation": "any",
  "permissions": ["notifications", "persistent-storage", "camera"],
  "features": ["background-sync", "push-messaging", "web-share"],
  "serviceworker": {
    "src": "/service-worker.js",
    "scope": "/",
    "use_cache": true
  }
}
